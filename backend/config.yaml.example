# AI Animate Configuration File

# AI Services Configuration
ai_services:
  # Qiniu LLM API
  llm:
    base_url: "https://openai.qiniu.com/v1"
    api_key: "YOUR_QINIU_API_KEY_HERE"
    model: "deepseek-v3"
    max_tokens: 4096
    timeout: 60
  
  # Image Generation API (Placeholder - to be configured)
  image_generation:
    base_url: "http://localhost:8001"
    api_key: "YOUR_IMAGE_GEN_API_KEY_HERE"
    timeout: 120
  
  # Video Generation API (Placeholder - to be configured)
  video_generation:
    base_url: "http://localhost:8002"
    api_key: "YOUR_VIDEO_GEN_API_KEY_HERE"
    timeout: 300
  
  # LoRA Training API (Placeholder - to be configured)
  lora_training:
    base_url: "http://localhost:8003"
    api_key: "YOUR_LORA_API_KEY_HERE"
    timeout: 600
  
  # TTS API (Placeholder - to be configured)
  tts:
    base_url: "http://localhost:8004"
    api_key: "YOUR_TTS_API_KEY_HERE"
    timeout: 60

# Server Configuration
server:
  host: "0.0.0.0"
  port: 8000
  reload: true

# Storage Configuration
storage:
  context_dir: "./context"
  assets_dir: "./assets"
  frames_dir: "./frames"
  videos_dir: "./videos"
  audio_dir: "./audio"
  logs_dir: "./logs"

# Project Configuration
project:
  default_style:
    model: "SDXL_Niji6"
    seed: 777312
